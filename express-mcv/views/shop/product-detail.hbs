<main class="centered">
  <h1>{{prod.Title}}</h1>
  <hr />
  <div>
    <img src="{{prod.ImageUrl}}" alt="{{product.Title}}" />
  </div>
  <h2>{{prod.Price}}</h2>
  <p>{{prod.Description}}</p>
  <form action="/cart" method="post">
    <button class="btn" type="submit">Add to Cart</button>
    <input type="hidden" name="productId" value="{{prod.Id}}">
  </form>
</main>